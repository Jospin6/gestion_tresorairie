<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Projets" %>
  <% content_for :sub_title, t("Projets") %>

  <div class="flex justify-between items-center">
    <h1 class="font-[500] text-2xl"></h1>
    <%= link_to "Nouveau projet", new_projet_path, class: "py-3 px-5 text-blue-500 block font-medium" %>
  </div>

  <div id="projets" class="min-w-full bg-white p-2 rounded-lg">

    <table class="w-full">
      <thead>
        <tr class="border-b-[1px] border-gray-400">
          <th>Titre</th>
          <th>Description</th>
          <th>Date debut</th>
          <th>Date fin</th>
          <th>Nbr Activit√©s</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @projets.each do |projet| %>
          <%= render projet %>
        <% end %>
      </tbody>
    </table>

    
  </div>
</div>
