<%= form_with(model: projet, class: "contents") do |form| %>
  <% if projet.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(projet.errors.count, "error") %> prohibited this projet from being saved:</h2>

      <ul>
        <% projet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-6 gap-4">
    <div class="col-span-6 mt-2">
      <%= form.label :titre %>
      <%= form.text_field :titre, class: "block h-[35px] shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="col-span-3">
      <%= form.label :date_debut %>
      <%= form.date_field :date_debut, class: "block h-[35px] shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="col-span-3">
      <%= form.label :date_fin %>
      <%= form.date_field :date_fin, class: "block h-[35px] shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="col-span-6">
      <%= form.label :description %>
      <%= form.text_area :description, rows: 2, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-[3px] px-[10px] mt-2 bg-blue-600 text-white inline-block cursor-pointer" %>
  </div>
<% end %>
