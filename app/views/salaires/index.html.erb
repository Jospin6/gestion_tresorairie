<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Salaires" %>
  <% content_for :sub_title, t("Salaires") %>

  <div class="flex justify-between items-center">
    <h1 class="font-[500] text-2xl">Salaires</h1>
    <%= link_to "New salaire", new_salaire_path, class: "py-3 px-5 text-blue-500 block font-medium" %>
  </div>

  <div id="salaires" class="min-w-full">
    <% @salaires.each do |salaire| %>
      <%= render salaire %>
      <p>
        <%= link_to "Show this salaire", salaire, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
