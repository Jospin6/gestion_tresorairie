<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Employes" %>
  <% content_for :sub_title, t("Employes") %>

  <div class="flex justify-between items-center">
    <h1 class=""></h1>
    <%= link_to "Nouveau employe", new_employe_path, class: "py-3 text-blue-500 block font-medium" %>
  </div>

  <div id="employes" class="min-w-full bg-white p-2 rounded-lg">
    <table class="w-full">
    <thead>
      <tr class="border-b-[1px] border-gray-400">
        <th>Nom</th>
        <th>Post nom</th>
        <th>Contact</th>
        <th>Mail</th>
        <th>Adresses</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @employes.each do |employe| %>
        <%= render employe %>
      <% end %>
    </tbody>
  </table>
    
  </div>
</div>
