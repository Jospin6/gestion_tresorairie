<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Employes" %>
  <% content_for :sub_title, t("Employes") %>

  <div class="flex justify-between items-center">
    <h1 class=""></h1>
    <%= link_to "Nouveau employe", new_employe_path, class: "py-3 px-5 text-blue-500 block font-medium" %>
  </div>

  <div id="employes" class="min-w-full">
    <% @employes.each do |employe| %>
      <%= render employe %>
      <p>
        <%= link_to "Show this employe", employe, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
