 <% content_for :sub_title, t("Employes") %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div>
    <%= link_to "Modifier mes infos", edit_employe_path(@employe), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Retours", employes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    
    <% if current_user.role = "admin" %>
      <div class="inline-block ml-2">
        <%= button_to "Supprimer l'employer", @employe, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    <% end %>
    
  </div>

  <div>
    <%= render partial: "card", locals: { employe: @employe } %>
  </div>

  
</div>
