<div class="w-[400px] px-4 m-auto bg-yellow-300 py-2">
  <h2 class="text-center text-2xl font-[500]">Connexion</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :login %><br />
      <%= f.text_field :login, autofocus: true, autocomplete: "off", class: "w-full rounded-lg" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full rounded-lg" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Se connecter", class: "w-full rounded-lg py-[3px] bg-blue-500 text-center text-white" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
