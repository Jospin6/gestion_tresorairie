<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Membre conseils" %>
  <% content_for :sub_title, t("Membre conseils") %>

  <div class="flex justify-between items-center">
    <h1 class="font-[500] text-2xl"></h1>
    <% if current_user.role == "directeur" || "chargÃ© de programme" %>
      <%= link_to "Nouveau membre du conseil", new_membre_conseil_path, class: "py-3 px-5 text-blue-500 block font-medium" %>
    <% end %>
  </div>

  <div id="membre_conseils" class="min-w-full bg-white p-2 rounded-lg">

    <table class="w-full">
      <thead>
        <tr class="border-b-[1px] border-gray-400">
          <th>Nom</th>
          <th>Post nom</th>
          <th>Contact</th>
          <th>Mail</th>
          <th>Adresses</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @membre_conseils.each do |membre_conseil| %>
          <%= render membre_conseil %>
        <% end %>
      </tbody>
    </table>

    
  </div>
</div>
