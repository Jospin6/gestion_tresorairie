<div class="w-full flex">
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <% content_for :sub_title, t("Partenaires") %>

    <div class="grid grid-cols-6 gap-4">
      <div class="col-span-3 bg-white p-2 rounded"><%= render partial: "card", locals: { partenaire: @partenaire } %></div>
      <div class="col-span-3 bg-white p-2 rounded"></div>
    </div>

    <div class="col-span-4 p-2 bg-white rounded mt-2">
        <h1 class="text-xl font-[500]">Projets financ√©</h1>
        <table class="w-full text-[14px]">
          <thead>
            <tr class="border-b-[1px] border-gray-400">
              <th>Titre</th>
              <th>Description</th>
              <th>Date debut</th>
              <th>Date fin</th>
              <th>Montant investi</th>
              <th>Actions</th>
            </tr>
          </thead>
        </table>
      </div>

    <div class="inline-block ml-2">
      <%= button_to "Destroy this partenaire", @partenaire, method: :delete, class: "mt-2 rounded-lg py-[2px] px-[10px] bg-red-700 text-[14px] text-red-300 font-medium" %>
    </div>
  </div>
</div>
